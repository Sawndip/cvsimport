UDIError UDIGetStdout (
  UDIHostMemPtr	Buf,			/* Out */
  UDISizeT	BufSize,		/* In */
  UDISizeT	*CountDone		/* Out */
  )
{
  int r;
  IN_INIT();
  if (BufSize > 4000)
    BufSize = 4000;
  IN_VAL(UDISizeT,BufSize);
  r = DO_CALL(UDIGetStdout_c);
  OUT_INIT();
  *CountDone = OUT_VAL(UDISizeT);
  if (*CountDone <= BufSize)
    OUT_DATA(Buf, *CountDone);
  return r;
}

