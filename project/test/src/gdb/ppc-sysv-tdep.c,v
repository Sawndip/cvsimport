    ftype = check_typedef (TYPE_TARGET_TYPE (ftype));
  if (TYPE_CODE (ftype) == TYPE_CODE_FUNC
      && TYPE_CALLING_CONVENTION (ftype) == DW_CC_GDB_IBM_OpenCL)
    opencl_abi = 1;

