@a31 15
/* Ensure that X is aligned to an S byte boundary (assuming that S is
   a power of 2) rounding up/down where necessary.  */

static ULONGEST
align_up (ULONGEST x, int s)
{
  return (x + s - 1) & -s;
}

static ULONGEST
align_down (ULONGEST x, int s)
{
  return (x & -s);
}

@


