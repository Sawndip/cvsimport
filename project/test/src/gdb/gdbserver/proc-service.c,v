a69 16

static struct regset_info *
fpregset_info(void)
{
  int i = 0;

  while (target_regsets[i].size != -1)
    {
      if (target_regsets[i].type == FP_REGS)
	break;
      i++;
    }

  return &target_regsets[i];
}
#endif
