s/XM_FILE[	 ]*=[	 ]*\([^	 ]*\)/\1/p
' ${host_makefile_frag}`

targetfile=`sed -n '
s/TM_FILE[	 ]*=[	 ]*\([^	 ]*\)/\1/p
' ${target_makefile_frag}`

if test "${target}" = "${host}"; then
nativefile=`sed -n '
s/NAT_FILE[	 ]*=[	 ]*\([^	 ]*\)/\1/p
' ${host_makefile_frag}`
fi
