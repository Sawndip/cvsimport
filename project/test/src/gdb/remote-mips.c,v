enum break_type {
  BREAK_WRITE,	/* 0 */
  BREAK_READ,	/* 1 */
  BREAK_ACCESS,	/* 2 */
  BREAK_FETCH,	/* 3 */
  BREAK_UNUSED	/* 4 */
};
