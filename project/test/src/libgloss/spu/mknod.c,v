#include <unistd.h>
#include "jsre.h"

typedef struct
{
  unsigned int path;
  unsigned int pad0[3];
  unsigned int mode;
  unsigned int pad1[3];
  unsigned int dev;
  unsigned int pad2[3];
} syscall_mknod_t;

int
mknod (const char *path, mode_t mode, dev_t dev)
{
  syscall_mknod_t sys;

  sys.path = (unsigned int) path;
  sys.mode = (unsigned int) mode;
  sys.dev = (unsigned int) dev;
  return __send_to_ppe (JSRE_POSIX1_SIGNALCODE, JSRE_MKNOD, &sys);
}
