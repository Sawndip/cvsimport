#include <errno.h>

extern char _heap_start[];
extern char _heap[];
extern char _heap_end[];

static char *heap_ptr;

char *sbrk (int nbytes)
{
  char *base;

  if (!heap_ptr)
    heap_ptr = (char *)&_heap;

  base = heap_ptr;
  heap_ptr += nbytes;

  if (heap_ptr <= ((char *)&_heap_end + 1))
    return base;
  else
    {
      errno = ENOMEM;
      return ((char *)-1);
    }
}

