@d37 2
a38 2
strlwr (a)
     char *a;
d40 2
a41 3
  char *ret = a;

  while (*a != '\0')
d43 1
a43 3
      if (isupper (*a))
	*a = tolower (*a);
      ++a;
d45 1
a45 2

  return ret;
