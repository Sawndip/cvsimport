	$(TARGET_CPU_HFILES), $(OBJ_FORMAT_CFILES), $(OBJ_FORMAT_HFILES),
	$(CONFIG_ATOF_CFILES), $(MULTI_CFILES), so their dependency fragments
	are picked up in the Makefile.
